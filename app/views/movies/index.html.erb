<h1 class = "current-genre"><%= params[:genre]%></h1>

<% if @movies.count ==0 %> 
<h3> No titles in this Genre</h3>
<% else %> 
	<div class="row">
		<% @movies.each do |movie| %>
			<div class="col-md-3">
				<a href="/movies/ <%= movie.id %>">
					<%= image_tag movie.movie_img.url(:movie_index), class: "movie" %>
				</a>
			</div>
		<% end %>
	</div>
<%end%>
